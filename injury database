import json
import os

DATA_PATH = os.path.join(os.path.dirname(__file__), "data", "injuries.json")

def load_injuries():

    try:
        with open(DATA_PATH, 'r', encoding='utf-8') as f:
            return json.load(f)
    except FileNotFoundError:
        print("Injury database not found. Ensure data/injuries.json exists.")
        return []
    except json.JSONDecodeError:
        print("Error reading injury database. Check JSON format.")
        return []
    
